# i3status configuration file.

general {
        colors = true
	color_good = "#00ff99"
        color_bad = "#f42069"
	interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "%ip @ %essid"
        format_down = "wifi down"
	separator = true
}

ethernet _first_ {
        format_up = "%ip @ %speed"
        format_down = ""
}

battery all {
	integer_battery_capacity = true
        format = "%percentage / %remaining / %consumption"
	status_bat = "dis"
	status_chr = "chr"
	status_full = "full"
}

disk "/" {
        format = "%used"
	prefix_type = "decimal"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
}

volume master {
	format = "vol %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
        format = "%h %d %I:%M "
}
